queue<int> q;
        q.push(0);
        vis[0]=true;
        while(!q.empty()) {
            int u=q.front();
            q.pop();
            res.push_back(u);
            for(auto& v:adj[u]) {
                if(!vis[v]) {
                    solve(adj,res,vis);
                    vis[v]=true;
                }
            }
        }
